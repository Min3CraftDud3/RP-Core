<?xml version="1.0" encoding="UTF-8"?>
<project name="module_rp-core" default="compile.module.rp-core">
  <dirname property="module.rp-core.basedir" file="${ant.file.module_rp-core}"/>
  
  <property name="module.jdk.home.rp-core" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.rp-core" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.rp-core" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.rp-core" value="-encoding UTF-8 -source 1.7 ${compiler.args}"/>
  
  <property name="rp-core.output.dir" value="${module.rp-core.basedir}/target/classes"/>
  <property name="rp-core.testoutput.dir" value="${module.rp-core.basedir}/target/test-classes"/>
  
  <path id="rp-core.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="rp-core.module.production.classpath">
    <path refid="${module.jdk.classpath.rp-core}"/>
    <pathelement location="${basedir}/../bukkit-1.7.9-R0.2-20140515.034156-1.jar"/>
    <pathelement location="${basedir}/../craftbukkit-1.7.9-R0.2-20140520.082451-2.jar"/>
  </path>
  
  <path id="rp-core.runtime.production.module.classpath">
    <pathelement location="${rp-core.output.dir}"/>
    <pathelement location="${basedir}/../bukkit-1.7.9-R0.2-20140515.034156-1.jar"/>
    <pathelement location="${basedir}/../craftbukkit-1.7.9-R0.2-20140520.082451-2.jar"/>
  </path>
  
  <path id="rp-core.module.classpath">
    <pathelement location="${rp-core.output.dir}"/>
    <path refid="${module.jdk.classpath.rp-core}"/>
    <pathelement location="${basedir}/../bukkit-1.7.9-R0.2-20140515.034156-1.jar"/>
    <pathelement location="${basedir}/../craftbukkit-1.7.9-R0.2-20140520.082451-2.jar"/>
  </path>
  
  <path id="rp-core.runtime.module.classpath">
    <pathelement location="${rp-core.testoutput.dir}"/>
    <pathelement location="${rp-core.output.dir}"/>
    <pathelement location="${basedir}/../bukkit-1.7.9-R0.2-20140515.034156-1.jar"/>
    <pathelement location="${basedir}/../craftbukkit-1.7.9-R0.2-20140520.082451-2.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.rp-core">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.rp-core">
    <patternset refid="excluded.from.module.rp-core"/>
  </patternset>
  
  <path id="rp-core.module.sourcepath">
    <dirset dir="${module.rp-core.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="rp-core.module.test.sourcepath">
    <dirset dir="${module.rp-core.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.rp-core" depends="compile.module.rp-core.production,compile.module.rp-core.tests" description="Compile module RP-Core"/>
  
  <target name="compile.module.rp-core.production" depends="register.custom.compilers" description="Compile module RP-Core; production classes">
    <mkdir dir="${rp-core.output.dir}"/>
    <javac2 destdir="${rp-core.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.rp-core}/javac">
      <compilerarg line="${compiler.args.rp-core}"/>
      <bootclasspath refid="rp-core.module.bootclasspath"/>
      <classpath refid="rp-core.module.production.classpath"/>
      <src refid="rp-core.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.rp-core"/>
    </javac2>
    
    <copy todir="${rp-core.output.dir}">
      <fileset dir="${module.rp-core.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.rp-core.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.rp-core.tests" depends="register.custom.compilers,compile.module.rp-core.production" description="compile module RP-Core; test classes" unless="skip.tests">
    <mkdir dir="${rp-core.testoutput.dir}"/>
    <javac2 destdir="${rp-core.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.rp-core}/javac">
      <compilerarg line="${compiler.args.rp-core}"/>
      <bootclasspath refid="rp-core.module.bootclasspath"/>
      <classpath refid="rp-core.module.classpath"/>
      <src refid="rp-core.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.rp-core"/>
    </javac2>
    
    <copy todir="${rp-core.testoutput.dir}">
      <fileset dir="${module.rp-core.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.rp-core" description="cleanup module">
    <delete dir="${rp-core.output.dir}"/>
    <delete dir="${rp-core.testoutput.dir}"/>
  </target>
</project>